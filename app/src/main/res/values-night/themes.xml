        <!-- Pengaturan tema gelap -->
        <item name="colorPrimary">@color/blue</item> <!-- Pastikan warna ini sesuai -->
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/navigationBarColorDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="colorControlNormal">@color/nav_colors_dark</item> <!-- Sesuaikan dengan warna navigasi gelap -->
