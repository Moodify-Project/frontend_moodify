<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Pengaturan tema gelap -->
    <style name="Base.Theme.Frontend_moodify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item> <!-- Biru terang -->
        <item name="colorPrimaryVariant">@color/dark_blue</item> <!-- Biru tua -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- Teks di atas primary color -->
        <item name="colorSecondary">@color/medium_blue</item> <!-- Biru medium untuk elemen sekunder -->
        <item name="colorOnSecondary">@android:color/white</item> <!-- Teks di atas warna sekunder -->
        <item name="android:statusBarColor">@color/dark_blue</item> <!-- Status bar berwarna biru tua -->
        <item name="android:navigationBarColor">@color/navigationBarColorDark</item> <!-- Warna bar navigasi untuk mode gelap -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Teks utama putih -->
        <item name="android:textColorSecondary">@color/grey</item> <!-- Teks sekunder abu-abu -->
        <item name="colorControlNormal">@color/nav_colors_dark</item> <!-- Warna ikon navigasi gelap -->
        <item name="android:windowBackground">@color/black</item> <!-- Latar belakang hitam -->
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item> <!-- Menu Popup gelap -->
    </style>

    <style name="Theme.Frontend_moodify" parent="Base.Theme.Frontend_moodify" />

    <!-- Splash Screen Theme -->
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item> <!-- Latar belakang splash screen hitam -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Status bar transparan saat splash -->
    </style>

    <!-- Popup Menu Style (Dark) -->
    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/black</item> <!-- Black background for dark mode -->
        <item name="android:textColor">@android:color/white</item> <!-- White text color -->
    </style>
</resources>
